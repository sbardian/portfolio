{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "typeRoots": ["src/@types", "node_modules/@types", "src/@types/**/*.d.ts"]
  },
  "exclude": [
    ".cache",
    "public",
    "**/*test.tsx",
    "sanityportfolio",
    "src/types"
  ],
  "include": ["**/*.ts", "**/*.tsx"]
}
